<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ReadWish" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/DTColorPrimary</item>
        <item name="colorPrimaryVariant">@color/DTColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/DTColorOnPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/DTColorSecondary</item>
        <item name="colorSecondaryVariant">@color/DTColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/DTColorOnSecondary</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/DTColorBackground</item>
        <item name="colorSurface">@color/DTColorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/DTColorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/DTColorPrimaryVariant</item>
    </style>
</resources>